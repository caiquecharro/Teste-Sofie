<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="actionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/orange_button</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.NoActionBarParent"></style>

    <style name="AppTheme.NoActionBarParent" parent="AppTheme">
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="actionBarTheme">@style/actionBarStyle</item>
    </style>

    <style name="AppTheme.NoActionBarSplash" parent="AppTheme">
        <item name="colorPrimaryDark">@color/green</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>